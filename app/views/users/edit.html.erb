<% provide(:title, "Edit user") %>
<h1><%= t('.update_your_profile') %></h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
		
		<%= render 'fields',f: f %>

		<%= f.submit t('.save_changes'), class: "btn btn-large btn-primary" %>
		<% end %>

		<%= gravatar_for @user %>
		<a href="http://gravatar.com/emails" target="_blank"><%= t('.change') %></a>
	</div>
</div>