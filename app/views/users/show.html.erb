<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user, size: 40 %>
				<%= @user.name %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
		<% if @user.microblogs.any? %>
			<h3>Microblogs (<%= @user.microblogs.count %>)</h3>
			<ol class="microblogs">
				<%= render @microblogs %>
			</ol>
			<%= will_paginate @microblogs %>
		<% end %>
	</div>
</div>
