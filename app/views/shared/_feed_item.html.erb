<li id="<%= feed_item.id %>">
	<%= link_to gravatar_for(feed_item.user), feed_item.user %>
	<span class="user">
		<%= link_to feed_item.user.name, feed_item.user %>
	</span>
	<span class="content"><%= feed_item.content %></span>

	<% if feed_item.replying? %>
		<span class="view">
      <%= link_to "View conversation", 
      	  view_conversation_microblog_path(feed_item.id), remote: true %>
    </span>
  <% else %>  
    <span class=" expand">
      <%= link_to "Expand", expand_microblog_path(feed_item.id), 
      remote: true %>
    </span>
	<% end %>

	<span class="reply">
		<%= link_to "Reply", '#' %>
	</span>

	<span class="timestamp">
		Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
	</span>

	<% if current_user?(feed_item.user) %>
		<%= link_to "delete", feed_item, method: :delete,
		                                 data: { confirm: "You sure?" },
		                                 title: feed_item.content %>
	<% end %>


	<div class="reply_form">
		<%= form_for @microblog, :html => { :id => '', :class => 'reply_micropost' } do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="field">
				<%= f.text_area :content,  :id => "reply_form_#{feed_item.id}",
				    placeholder: "Reply..." %>
			</div>
			<div><%= f.hidden_field :in_reply_to, :value => feed_item.id %></div>
			<%= f.submit "Reply", class: "btn btn-small btn-primary" %>
	  <% end %>
  </div> 
</li>